<div>
    @{
        Layout = "~/Views/Shared/_LayoutMenu.cshtml";
    }

    @*<hr /> *@

    <div class="card" style="background-image: linear-gradient(15deg, #5b6be8 30%, #00B4D8 70%); color: black;
        padding: 2em;">
        <div class="row">
            <div class="col-3">
                <div class="p-5">
                    <center>
                        <object data="~/imagen/user/@ViewBag.FotoPerfil-.jpg" style="border-radius:100%;width:200px" type="image/png">
                            <img src="https://image.flaticon.com/icons/png/512/149/149071.png" width="200" class="img-circle">
                        </object>
                    </center>
                </div>
                <div class="text-center">
                    <h5>
                        <a href="~/VirtualEmpleado/CambiarFoto">Cambiar foto de perfil</a>
                    </h5>
                </div>
            </div>
            <div class="col-9">



                <div class="row ">
                    <div class="col-sm-10">
                        <div class="form-group">
                            <p class="form-control-static display-4">@ViewBag.DatosPerfil.PrimerNombre @ViewBag.DatosPerfil.SegundoNombre @ViewBag.DatosPerfil.PrimerApellido @ViewBag.DatosPerfil.SegundoApellido  </p>
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div class="col-6">


                        <div class="row ">
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <p class="form-control-static"><i class="nc-icon nc-single-02"></i>  @('@')@Roles.GetRolesForUser()[2]</p>
                                </div>
                            </div>
                        </div>


                        <div class="row ">
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <p class="form-control-static"><i class="nc-icon nc-email-85"></i>  @ViewBag.DatosPerfil.CorreoElectronico</p>
                                </div>
                            </div>
                        </div>

                        <div class="row ">
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <p class="form-control-static"><i class="nc-icon nc-paper"></i>  @ViewBag.DatosPerfil.FechaNacimiento</p>
                                </div>
                            </div>
                        </div>


                        <div class="row ">
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <p class="form-control-static"><i class="nc-icon nc-world-2"></i>  @ViewBag.DatosPerfil.Direccion</p>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="col-6 pt-5">

                        <div class="row ">
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <p class="form-control-static"><i class="nc-icon nc-mobile"></i> @ViewBag.DatosPerfil.Telefono</p>
                                </div>
                            </div>
                        </div>

                        <div class="row ">
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <p class="form-control-static"><i class="nc-icon nc-mobile"></i> @ViewBag.DatosPerfil.Celular</p>
                                </div>
                            </div>
                        </div>



                        <div class="pt-4 pb-4 pl-3">
                            <h5>
                                <a href="~/VirtualEstudiante/EditarInformacion">Editar información</a>
                            </h5>
                            <h5>
                                @Html.ActionLink("Cambiar contraseña", "CambiarPassword", "VirtualEstudiante")
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
<div class="modal" id="ModalCondicion" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleModalCond"></h5>
            </div>
            <div class="modal-body">
                <p id="txtModalCond"></p>
            </div>
            <div class="modal-footer">
                <a id="botonModalCond1" class="btn btn-success" href="~/VirtualEstudiante/EncuestaSeleccion">Ir a evaluación</a>
                <a id="botonModalCond" class="btn btn-warning active">Entendido</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
           
        });
    </script>
}